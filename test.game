
num function average(list(num) x){
        num result = 0
        foreach(num i in x){
            result = result + i
        }
        return result / x.length()
}

class Player {
  	text first
        text last
        num points_per_game
        list(num) points_scored

        function addGame(num points) {
            points_scored.add(points)
            points_per_game = average(points_scored)
        }

        function setName(text f, text l){
            first = f
            last = l
        }
}

class Game {
        num home_score
        num away_score
}
